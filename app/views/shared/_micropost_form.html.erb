<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%#                                    "Compose new micropost..." %>
    <%= f.text_area :content, placeholder: t(".compose_new_micropost") %>
  </div>
  <%#          "Post" %>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
<% end %>
