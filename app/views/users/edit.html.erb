<h1>Settings</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <div>
                <h2><%= @user.name %></h2>
            </div>

            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :description, "Profile" %>
            <%= f.text_field :description %>

            <%= f.label :location %>
            <%= f.text_field :location %>

            <%= f.label :url, "Homepage" %>
            <%= f.text_field :url, placeholder: "http://" %>

            <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
        <% end %>
    </div>
</div>
