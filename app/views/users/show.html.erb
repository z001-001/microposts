<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div>
        <%= link_to "Followings", followings_user_path %>
        <%= link_to  "Followers", followers_user_path %>
      </div>
      <div class="description">
        <%= @user.description %>
      </div>
      <% if @user.location %>
        <span class="location">
          Location: <%= @user.location %>
        </span>
      <% end %>
      <% if @user.url %>
        <span>
          <%= link_to "Homepage", @user.url, target: "_blank" %>
        </span>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= page_entries_info @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>
